<project name="fc-web" default="compile" basedir="..">
	<property name="deploy"		location="../../www-deploy/GardenUs"/>
	<property name="src"		location="src"/>
	<property name="resources"	location="src/main/resources"/>
	<property name="build"		location="${deploy}/src/main/webapp/WEB-INF/classes"/>
	<property name="script"		location="${deploy}/src/main/webapp/WEB-INF/script"/>
	<property name="libs"		location="${deploy}/src/main/webapp/WEB-INF/lib"/>

	<target name="init">
		<tstamp/>
		<mkdir dir="${deploy}"/>
		<mkdir dir="${build}"/>
	</target>

	<target name="compile" depends="init" description="compile the source " >
		<javac srcdir="${src}" destdir="${build}" debug="true">
			<classpath>
				<pathelement path="${classpath}"/>
				<fileset dir="${deploy}/src/main/webapp/WEB-INF/lib">
					<include name="**/*.jar"/>
				</fileset>
				<fileset dir="/usr/local/tomcat/tomcat-fc-web/lib">
					<include name="**/*.jar"/>
				</fileset>
				<pathelement location="src/main/webapp/WEB-INF/classes"/>
			</classpath>
		</javac>
	</target>

	<target name="copyRoot">
		<copy todir="${deploy}/src/main/webapp">
			<fileset dir="src/main/webapp">
				<include name="**/*"/>
				<exclude name="**/.gitignore"/>
				<exclude name="WEB-INF/classes/**"/>
			</fileset>
		</copy>
		<!-- copy file="src/main/webapp/WEB-INF/web-web.xml" tofile="${deploy}/src/main/webapp/WEB-INF/web.xml" overwrite="true" / -->
	</target>

	<target name="copyResource">
		<copy todir="${build}">
			<fileset dir="${resources}">
				<include name="**/*"/>
			</fileset>
		</copy>
		<copy file="src/main/resources/log4j/log4j-web.xml" tofile="${deploy}/src/main/webapp/WEB-INF/classes/log4j/log4j.xml" overwrite="true" />
		<copy file="src/main/resources/properties/const-web.xml" tofile="${deploy}/src/main/webapp/WEB-INF/classes/properties/const.xml" overwrite="true" />
		<!-- <copy file="src/main/resources/spring/context-datasource-web.xml" tofile="${deploy}/src/main/webapp/WEB-INF/classes/spring/context-datasource.xml" overwrite="true" /> -->
	</target>

	<target name="copyLib">
		<copy todir="${libs}">
			<fileset dir="src/main/webapp/WEB-INF/lib">
				<include name="**/*"/>
			</fileset>
		</copy>
	</target>

	<target name="chmod">
		<chmod dir="${script}" perm="a+x" includes="**/*.sh" />
	</target>

	<target name="dist" depends="clean, copyRoot, copyLib, chmod, compile, copyResource" description="clean up" ></target>

	<target name="clean" description="clean up" >
		<delete dir="${build}"/>
		<delete dir="${libs}"/>
	</target>
</project>
